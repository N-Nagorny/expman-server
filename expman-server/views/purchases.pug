include partials/header

block content
    div(class='btn-group')
        a(href='./add-purchase', class='btn btn-primary') Add new purchase
            i(class='fas fa-cart-plus')
    div.text-center
        table(class='table table-striped')
            thead
                tr
                    th Name
                    th Type
                    th(class="d-none d-lg-table-cell") Mandatory
                    th(class="d-none d-lg-table-cell") Single-time
                    th Created at
            tbody
                each purchase in purchases
                    tr
                        td !{purchase.name}
                        td !{purchase.type}
                        td(class="d-none d-lg-table-cell") !{purchase.is_mandatory}
                        td(class="d-none d-lg-table-cell") !{purchase.is_single_time}
                        td !{purchase.createdAt}
                        td
                            div(class='btn-group-vertical')
                                a(href='./add-expense?purchaseId='+purchase.id, class='btn btn-primary')
                                    i(class='fas fa-cart-arrow-down')
                                a(href='./', class='btn btn-primary')
                                    i(class='fas fa-shopping-cart')

include partials/footer
